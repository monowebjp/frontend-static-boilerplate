- var siteName = 'monoweb.jp'
- var siteURL = 'https://monoweb.jp/'
head
	meta(charset='utf-8')
	if pageTitle !== undefined
		title #{ pageTitle } | #{ siteName }
	else
		title monoweb.jp
	meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
	meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
	meta(name='theme-color' content='#66033')

	meta(name='description' content=pageDescription)
	meta(property='og:url' content=#{ siteURL + pagePath })
	meta(property='og:type' content='website')
	meta(property='og:title' content=pageTitle)
	meta(property='og:image' content=#{ siteURL + pageImgPath })
	meta(property='og:image:alt' content=pageImgAlt)
	meta(property='og:description' content=pageDescription)
	meta(property='og:site_name' content=siteName)

	meta(property='fb:app_id' content='354677068687755')
	meta(property='article:author' content='https://fb.me/monowebjp')

	meta(name='twitter:card' content='summary_large_image')
	meta(name='twitter:site' content='@monowebjp')

	meta(name='format-detection' content='telephone=no')

	link(rel='shortcut icon' href='/assets/img/favicons/favivon.ico')
	link(rel='icon' sizes='16x16 32x32' href='/assets/img/favicons/favivon.ico')
	link(rel='icon' sizes='152x152' href='/assets/img/favicons/favivon-152.png')

	link(rel='stylesheet' href='/assets/stylesheets/style.css')