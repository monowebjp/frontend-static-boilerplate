{
  "name": "frontend-static-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/monowebjp/frontend-static-boilerplate.git",
  "author": "<capybara@monoweb.jp>",
  "license": "MIT",
  "scripts": {
    "image": "run-s image:*",
    "image:gif": "imagemin -p=gifsicle src/**/*.gif --out-dir=dist/*",
    "image:jpg": "imagemin -p=mozjpeg src/**/*.jpg --out-dir=dist/*",
    "image:png": "imagemin -p=pngquant src/**/*.png --out-dir=dist/*",
    "image:svg": "imagemin -p=svgo src/**/*.svg --out-dir=dist/*",
    "image:webp": "imagemin -p=webp dist/**/*.[gif|jpg|png] --out-dir=dist/*",
    "css": "run-s css:sass css:postcss",
    "css:postcss": "postcss \"dist/assets/css/**/*.css\" --base dist/assets/css/ -d dist/assets/css -c postcss.config.js",
    "css:sass": "sass src/assets/scss/ -i dist/assets/css/ --output-style expanded --source-map true",
    "ejs": "ejs-clit -b src/ \"**/[^_]*.ejs\" -o www/ --options ejs.config.json",
    "fractal": "fractal start --sync",
    "js": "webpack",
    "watch": "run-p watch:*",
    "watch:ejs": "chokidar \"src/**/*.ejs\" -c \"npm run ejs\"",
    "watch:css": "chokidar \"src/assets/scss/**/*.scss\" -c \"npm run css\"",
    "watch:js": "chokidar \"src/assets/js/**/*.ts\" -c \"npm run js\"",
    "watch:image": "chokidar  \"src/**/*.[gif|jpg|png|svg]\" -c \"npm run image\""
  },
  "devDependencies": {
    "@frctl/fractal": "^1.2.1",
    "autoprefixer": "^9.7.4",
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^2.1.0",
    "css-mqpacker": "^7.0.0",
    "csswring": "^7.0.0",
    "ejs-cli": "^2.1.1",
    "imagemin": "^7.0.1",
    "imagemin-cli": "^5.1.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "imagemin-webp": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "sass": "^1.25.0",
    "stylelint": "^13.0.0",
    "ts-loader": "^6.2.1",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
